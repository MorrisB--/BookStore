@model IEnumerable<BookStore.Models.Genre>

@{ 
    ViewBag.Title = "Store";
}
<br />
<br />
<br />
<br />
<h3>Browse Genres</h3>
<p>
    Select from @Model.Count() genres:
</p>
<ul>
    @{int i = 0;}

    @foreach (var genre in Model) {
        
        if (i == 0) {
        <li>@Html.ActionLink(@genre.Name, "ScienceFiction", "Store")</li>
        }

        if (i == 1) {
            <li>@Html.ActionLink(@genre.Name, "Poetry", "Store")</li>

        }

        if (i == 2) {
            <li>@Html.ActionLink(@genre.Name, "Romance", "Store")</li>
        }
        i++;
    }
</ul>